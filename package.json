{
  "name": "calvera",
  "version": "0.1.0",
  "private": true,
  "description": "An all-in-one Discord bot for managing Bitcraft projects at scale",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test:typecheck": "tsc",
    "test:lint": "eslint .",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:integration",
    "lint:fix": "eslint . --fix && prettier --write .",
    "lint:staged": "lint-staged",
    "dev": "tsx src/index.ts",
    "start": "pnpm db:migrate && pnpm dev",
    "discord:commands:sync": "tsx ./src/frontends/discord/commands/__meta__/syncCommands.ts",
    "discord:commands:deploy": "tsx ./src/frontends/discord/commands/__meta__/deployCommands.ts",
    "db:gen-types": "tsx ./src/database/__meta__/generateDbTypes.ts",
    "db:migrate": "tsx ./src/database/__meta__/migrateToLatest.ts",
    "db:migrate:down": "tsx ./src/database/__meta__/migrateDown.ts",
    "db:temp": "tsx ./tempDb.ts",
    "vela:generate-types": "tsx ./src/vela/__meta__/generateTypes.ts",
    "prepare": "husky"
  },
  "author": "trinitrotoluene",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "discord.js": "^14.21.0",
    "ioredis": "^5.7.0",
    "kysely": "^0.28.3",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-opentelemetry-transport": "^1.0.1",
    "pino-pretty": "^13.0.0",
    "postgres-array": "^3.0.4",
    "vite-tsconfig-paths": "^5.1.4",
    "yaml": "^2.8.0",
    "zod": "^4.0.5"
  },
  "volta": {
    "node": "24.4.1",
    "pnpm": "10.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testcontainers/postgresql": "^11.3.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^22.16.5",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.4",
    "kanel": "^3.14.1",
    "kanel-kysely": "^0.7.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "quicktype": "^23.2.6",
    "testcontainers": "^11.3.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.ts|js|md|cjs|mjs|json": ["eslint --fix", "prettier --write"]
  }
}
