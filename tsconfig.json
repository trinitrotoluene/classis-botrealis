{
  "extends": ["@tsconfig/node24/tsconfig.json"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "integration/**/*"]
}
